import epackage	"model/simpleScenario.ecore"
import viatra	"queries/simpleScenarioQueries.vql"

generate {
	metamodel = { package simpleScenario }
	constraints = { package queries}
	partial-model = { "inputs/SimpleScenarioInstance.xmi"}
	solver = ViatraSolver
	scope = {
		#node = 10..30,
		#int = {},
		#<Actor> = 1
	}
	
	config = {
		runtime = 10000,
		log-level = normal,
		"numeric-solver" = "dreal",
		"scopePropagator" = "typeHierarchy"
	}
	
	runs = 1
	
	debug =			"outputs/debug"
	log =			"outputs/debug/log.txt"
	output =		"outputs/models"	
	statistics =	"outputs/statistics.csv"
}